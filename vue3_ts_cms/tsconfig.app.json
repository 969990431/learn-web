{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  // 类型声明文件
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/**/*.ts",
    "src/**/**/*.ts",
    "src/**/**/**/*.ts",
    "src/**/**/**/*.json",
    "src/**/**/**/**/*.ts",
    "auto-imports.d.ts",
    "components.d.ts"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    // "types": ["element-plus/global"],
    // 不允许隐式any 改为允许
    "noImplicitAny": false
  }
}

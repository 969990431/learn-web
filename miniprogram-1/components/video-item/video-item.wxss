/* components/video-item/video-item.wxss */
.item {
  margin-bottom: 30rpx;
}

.cover-box {
  position: relative;
}

.cover {
  width: 100%;
  border-radius: 30rpx;
}

.bottom {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 60rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #f000;
  color: white;
}

.icon {
  width: 30rpx;
  height: 20rpx;
  margin: 0 10rpx;
}

.play-count {
  flex: 1;
  font-size: 24rpx;
}

.duration {
  margin-right: 20rpx;
  font-size: 24rpx;
}

.title {
  padding: 5rpx 10rpx;
  font-size: 30rpx;
  /* 显示两行 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}